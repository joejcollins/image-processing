// For format details, see https://aka.ms/devcontainer.json. For config options, see
// the README at: https://github.com/devcontainers/templates/tree/main/src/anaconda
{
	"name": "Anaconda (Python 3)",
	"image": "ghcr.io/joejcollins/aqua-marina:latest",
	"features": {
		"ghcr.io/devcontainers-contrib/features/starship:1": {}
	},
	"hostRequirements": {
		"cpus": 2,
		"memory": "8gb",
		"storage": "32gb"
	 },
	// Use 'forwardPorts' to make a ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": ". ./.devcontainer/post-create.sh  > ../post-create-log.txt",
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"charliermarsh.ruff",
				"eamodio.gitlens",
				"github.copilot",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"ms-python.mypy-type-checker",
				"ms-python.python",
				"streetsidesoftware.code-spell-checker",
				"tamasfe.even-better-toml"
			]
		}
	}
	// Uncomment to connect as root instead. More info:
	// https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}